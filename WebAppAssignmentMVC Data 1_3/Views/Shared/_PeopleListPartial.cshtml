@model List<Person>

    <div class="container">
        <div class="row bg-dark text-light">
            <div class="col-3">Name</div>
            <div class="col-3">PhoneNumber</div>
            <div class="col-3">City</div>
            <div class="col-3">Option</div>
        </div>
        @foreach (var person in Model)
        {
        <div class="row">
            <div class="col-3">@person.PersonName</div>
            <div class="col-3">@person.PersonPhoneNumber</div>
            <div class="col-3">@person.PersonCity</div>
            <div class="col-3"><a href="#" onClick="location.href='@Url.Action(" DeletePerson", "People" , new { id=@person.PersonId })'">Delete</a></div>
        </div>
        }
    </div>

